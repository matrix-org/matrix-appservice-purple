{
  "name": "matrix-bifrost",
  "version": "0.3.0",
  "description": "Multi protocol bridging for Matrix.",
  "main": "index.js",
  "scripts": {
    "prepare": "npm run build",
    "build": "tsc",
    "lint": "tslint --project tsconfig.json --format stylish",
    "start": "node lib/Program.js -c config.yaml",
    "genreg": "node lib/Program.js -r -c config.yaml",
    "test": "mocha -r ts-node/register test/test.ts test/*.ts test/**/*.ts",
    "changelog": "scripts/towncrier.sh",
    "coverage": "nyc mocha -r ts-node/register test/test.ts test/*.ts test/**/*.ts"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/matrix-org/matrix-bifrost.git"
  },
  "keywords": [],
  "author": "Will Hunt <will@half-shot.uk>",
  "license": "Apache-2.0",
  "bugs": {
    "url": "https://github.com/matrix-org/matrix-bifrost/issues"
  },
  "homepage": "https://github.com/matrix-org/matrix-bifrost",
  "dependencies": {
    "@xmpp/component": "^0.11.0",
    "@xmpp/component-core": "^0.11.0",
    "@xmpp/jid": "^0.11.0",
    "@xmpp/reconnect": "^0.11.0",
    "@xmpp/xml": "^0.11.0",
    "fast-xml-parser": "^3.17.4",
    "he": "^1.2.0",
    "htmlparser2": "^4.1.0",
    "leven": "^3.1.0",
    "marked": "^2.0.0",
    "matrix-appservice-bridge": "^2.6.1",
    "parse-entities": "^1.2.0",
    "pg": "8.3.3",
    "prom-client": "^11.2.1",
    "quick-lru": "^5.1.1",
    "request": "^2.88.0",
    "request-promise-native": "^1.0.5",
    "source-map-support": "^0.5.16",
    "uuid": "^3.3.2",
    "winston": "^3.0.0",
    "winston-daily-rotate-file": "^3.3.2",
    "xmpp.js": "^0.6.1"
  },
  "devDependencies": {
    "@istanbuljs/nyc-config-typescript": "^1.0.1",
    "@types/chai": "^4.2.12",
    "@types/he": "^1.1.1",
    "@types/marked": "^1.1.0",
    "@types/mocha": "^8.0.3",
    "@types/nedb": "^1.8.11",
    "@types/node": "^12",
    "@types/pg": "^7.14.5",
    "@types/request-promise-native": "^1.0.17",
    "@types/xmpp__jid": "^1.3.1",
    "@types/xmpp__xml": "^0.6.1",
    "chai": "^4.2.0",
    "mocha": "^8.1.3",
    "mock-require": "^3.0.3",
    "nedb": "^1.8.0",
    "nyc": "^15.1.0",
    "ts-node": "^9.0",
    "tslint": "^6.1.3",
    "typescript": "^4.2.4"
  },
  "optionalPeerDependencies": {
    "node-purple": "matrix-org/node-purple"
  },
  "nyc": {
    "check-coverage": true,
    "per-file": false,
    "lines": 85,
    "statements": 85,
    "functions": 75,
    "branches": 75,
    "include": [
      "src"
    ],
    "exclude": [
      "src/Program.ts"
    ],
    "reporter": [
      "lcov",
      "text-summary"
    ],
    "extension": [
      ".ts"
    ],
    "require": [
      "ts-node/register"
    ],
    "cache": true,
    "all": true,
    "instrument": true,
    "sourceMap": true,
    "report-dir": "./coverage"
  }
}
